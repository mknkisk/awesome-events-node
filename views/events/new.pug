extends ../layout

block content
  .page-header
    h1 Create Event

  form(method="POST" action="/events")
    if error
      - _.forEach(error.errors, function(value, key) {
        .alert.alert-danger
          ul
            li= value
      - })

    .form-group
      label(form="name") Name
      input.form-control(type="text" name="name" max-length="50" required="" value=event.name)
    .form-group
      label(form="place") Place
      input.form-control(type="text" name="place" max-length="100" required="" value=event.place)
    .form-group
      label(form="startTime") Start Time
      //- TODO Set min, max
      input.form-control(type="datetime-local" name="startTime" min="2016-12-19T00:00+09:00" max="2017-12-19T23:59+09:00" required="" value=event.startTime)
    .form-group
      label(form="startTime") End Time
      //- TODO Set min, max
      input.form-control(type="datetime-local" name="endTime" min="2016-12-19T00:00+09:00" max="2017-12-19T23:59+09:00" required="" value="#{event.endTime}")
    .form-group
      label(form="content") Content
      textarea.form-control(name="content" max-length="2000" rows="10" required="" value="#{event.conten}")
    button.btn.btn-default(type="submit") Create
