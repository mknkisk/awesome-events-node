extends ../layout

block content
  .page-header
    h1 Create Event

  form(method="POST" action="/events")
    .form-group
      label(form="name") Name
      input.form-control(type="text" name="name" max-length="50" required="")
    .form-group
      label(form="place") Place
      input.form-control(type="text" name="place" max-length="100" required="")
    .form-group
      label(form="startTime") Start Time
      //- TODO Set min, max
      input.form-control(type="datetime-local" name="startTime" min="2016-12-19T00:00+09:00" max="2017-12-19T23:59+09:00" required="")
    .form-group
      label(form="startTime") End Time
      //- TODO Set min, max
      input.form-control(type="datetime-local" name="endTime" min="2016-12-19T00:00+09:00" max="2017-12-19T23:59+09:00" required="")
    .form-group
      label(form="content") Content
      textarea.form-control(name="content" max-length="2000" required="")
    button.btn.btn-default(type="submit") Create
